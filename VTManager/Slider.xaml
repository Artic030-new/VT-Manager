<UserControl x:Class="VTManager.Slider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VTManager"
             mc:Ignorable="d" 
    x:Name="sidePanel"
             d:DesignHeight="670" d:DesignWidth="390">

    <UserControl.Resources>
        <Style x:Key="expandAreaStyle" TargetType="{x:Type Border}">
            <Setter Property="Margin" Value="0 0 0 645"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsChecked, ElementName=expandButton}" Value="True">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard Storyboard.TargetProperty="Margin">
                                <ThicknessAnimation To="0 0 0 0" Duration="0:0:0.4"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                    <DataTrigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard Storyboard.TargetProperty="Margin">
                                <ThicknessAnimation To="0 0 0 645" Duration="0:0:0.4"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.ExitActions>
                    
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border x:Name="expandArea" 
            Style="{DynamicResource expandAreaStyle}"
            Background="#333d5c">
        <Border.Effect>
            <DropShadowEffect BlurRadius="17" ShadowDepth="3" Opacity="0.7"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- The expand menu button -->
            <ToggleButton x:Name="expandButton" Content="v" Grid.Row="0"
                          Width="50" Height="25"
                          HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <!-- The content -->
            <TextBlock Grid.Row="1" Text="" TextWrapping="Wrap"/>
        </Grid>
    </Border>
</UserControl>